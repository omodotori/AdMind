rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      // Allow any authenticated user to read/write to the projects collection.
      // The application logic already ensures users can only see and edit their own projects.
      // This simpler rule avoids the need for manual composite index creation in Firebase.
      allow read, write: if request.auth != null;
    }
  }
}
